<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--下面是常用布局样式-->
    <style name="layout_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="layout_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--下面是常用布局样式-->
    <style name="layout_mm_bg_white">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--下面是常用布局样式-->
    <style name="layout_mm_ort_vertical">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="layout_mw_ort_vertical">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="layout_mm_ort_horizontal">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--标题的字体样式-->
    <style name="layout_tex_title">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_nomal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--正常的字体样式-->
    <style name="layout_tex_nomal">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_nomal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--灰色的字体样式-->
    <style name="layout_text_small_gray">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>