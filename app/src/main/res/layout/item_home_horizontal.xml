<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="com.yanb.daqsoft.baseandroid.ui.home.model.HomeHorizontalViewModel" />
        <import type="me.tatarka.bindingcollectionadapter2.BindingRecyclerViewAdapter" />
        <!--列表管理器-->
        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />
        <import type="android.support.v7.widget.LinearLayoutManager" />
        <variable
            name="horizontalViewModel2"
            type="HomeHorizontalViewModel" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="热门专题"
            style="@style/layout_tex_title"/>
        <!--binding:itemBinding="@{horizontalViewModel.itemBinding}"
            binding:adapter="@{horizontalViewModel.childAdapter}"
            binding:items="@{horizontalViewModel.observableList}"
            binding:layoutManager="@{LayoutManagers.linear(LinearLayoutManager.horizontalViewModel,false)}"
            -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            binding:itemBinding="@{horizontalViewModel2.itemBinding}"
            binding:adapter="@{horizontalViewModel2.childAdapter}"
            binding:items="@{horizontalViewModel2.observableList}"
            binding:layoutManager="@{LayoutManagers.linear(LinearLayoutManager.horizontalViewModel,false)}"
            />

    </LinearLayout>
