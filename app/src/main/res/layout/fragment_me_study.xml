<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="studyViewModel"
            type="com.yanb.daqsoft.baseandroid.ui.study.model.MeStudyFragmentModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/check_bg">

        <RelativeLayout
            android:background="@color/main_light"
            android:id="@+id/top"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="200dp">

            <LinearLayout
                android:id="@+id/ll_me_logo"
                android:gravity="center_vertical"
                android:layout_marginTop="42dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--圆形-->
                <com.daqsoft.customview.img.CircleImageView
                    android:src="@mipmap/icon_head_default"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:id="@+id/img_head"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/img_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:textSize="@dimen/text_18"
                        android:textColor="@color/text_nomal"
                        android:text="登录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/text_gray"
                        android:text="查看并编辑个人资料"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_main_utils"
            android:background="@drawable/bg_fill_white_r5"
            android:layout_marginTop="150dp"
            android:paddingBottom="20dp"
            android:paddingTop="@dimen/dp_20"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="center_horizontal"
                android:drawableTop="@mipmap/detail_jq_icon_collection_normal"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/text_14"
                android:text="收藏"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_horizontal"
                android:drawableTop="@mipmap/detail_jq_icon_collection_normal"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/text_14"
                android:text="收藏"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_horizontal"
                android:drawableTop="@mipmap/detail_jq_icon_collection_normal"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/text_14"
                android:text="收藏"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_horizontal"
                android:drawableTop="@mipmap/detail_jq_icon_collection_normal"
                android:drawablePadding="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/text_14"
                android:text="收藏"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/dp_10"
            android:background="@drawable/bg_fill_white_r5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_main_utils"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/text_nomal"
                android:textSize="@dimen/text_16"
                android:text="常用工具"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/common_rxjava2"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/detail_jq_icon_collection_normal"
                    android:drawablePadding="@dimen/dp_5"
                    android:textSize="@dimen/text_14"
                    android:text="Rxjava2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_pic_update"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/detail_jq_icon_collection_normal"
                    android:drawablePadding="@dimen/dp_5"
                    android:textSize="@dimen/text_14"
                    android:text="图片上传"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_update"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/detail_jq_icon_collection_normal"
                    android:drawablePadding="@dimen/dp_5"
                    android:textSize="@dimen/text_14"
                    android:text="版本更新"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/me_tv_videoplays"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/detail_jq_icon_collection_normal"
                    android:drawablePadding="@dimen/dp_5"
                    android:textSize="@dimen/text_14"
                    android:text="视频播放"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>