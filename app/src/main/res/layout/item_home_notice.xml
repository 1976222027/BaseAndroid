<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.yanb.daqsoft.baseandroid.ui.home.model.HomeNoticeViewModel" />
        <variable
            name="noticeViewModel"
            type="HomeNoticeViewModel" />
    </data>
    <!--通知布局-->
    <LinearLayout
        android:gravity="center_vertical"
        android:padding="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.yanb.daqsoft.baselib.view.IconView
            android:text="@string/icon_notice"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:text="紧急通知"
            android:textColor="@color/text_nomal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <com.yanb.daqsoft.baselib.view.IconView
            android:text="@string/icon_setting_more"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>